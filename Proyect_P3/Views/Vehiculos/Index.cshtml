            aplicarFiltros();

            // Scroll suave hacia la sección de vehículos
            $('html, body').animate({
                scrollTop: $("#vehiculosContainer").offset().top - 100
            }, 1000);

            // Feedback visual
            Swal.fire({
                title: `Vehículos ${marca}`,
                text: `Mostrando vehículos de la marca ${marca}`,
                icon: 'info',
                timer: 2000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
        };

        // 🚀 INICIALIZAR AL CARGAR LA PÁGINA
        $(document).ready(function () {
            // Reemplazar la función original después de que se carguen los datos
            const originalCargarDatos = cargarDatosIniciales;
            cargarDatosIniciales = function () {
                return originalCargarDatos().then(() => {
                    // Cargar carrusel después de obtener los datos
                    setTimeout(() => {
                        cargarMarcasCarrusel();
                    }, 1000);
                });
            };
        });
    </script>
