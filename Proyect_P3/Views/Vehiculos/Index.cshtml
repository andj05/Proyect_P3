                            tamaño: imagenComprimida.size,
                            tamañoOriginal: archivo.size,
                            estado: 'seleccionada',
                            comprimida: true,
                            factorCompresion: ((archivo.size - imagenComprimida.size) / archivo.size * 100).toFixed(1)
                        };

                        fotosSeleccionadas.push(fotoData);

                        console.log(`📸 Foto comprimida: ${fotoData.nombre}`);
