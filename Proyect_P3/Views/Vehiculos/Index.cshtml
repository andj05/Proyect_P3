        function validarArchivo(archivo) {
            console.log(`🔍 Validando archivo: ${archivo.name}`);

            // Validar tipo
            if (!archivo.type.match(/^image\/(jpeg|jpg|png|gif|bmp|webp)$/i)) {
                mostrarError(`❌ Tipo de archivo no válido: ${archivo.name}. Solo se permiten imágenes.`);
                return false;
            }

            // 📏 LÍMITES AJUSTADOS PARA PERMITIR IMÁGENES GRANDES QUE SERÁN COMPRIMIDAS
            const MAX_SIZE_ORIGINAL = 20; // 20MB límite para imagen original

            if (archivo.size > MAX_SIZE_ORIGINAL * 1024 * 1024) {
                mostrarError(`❌ Archivo muy grande: ${archivo.name}. Máximo ${MAX_SIZE_ORIGINAL}MB.\nLa imagen será comprimida automáticamente.`);
                return false;
            }

            console.log(`✅ Archivo válido: ${archivo.name} (${(archivo.size / 1024 / 1024).toFixed(2)}MB)`);
            return true;
        }

        function procesarArchivo(archivo) {
            console.log(`📸 Procesando archivo: ${archivo.name} (${(archivo.size / 1024 / 1024).toFixed(2)}MB)`);

            const reader = new FileReader();

            reader.onload = function (e) {
                // 🔧 COMPRIMIR IMAGEN ANTES DE GUARDARLA
