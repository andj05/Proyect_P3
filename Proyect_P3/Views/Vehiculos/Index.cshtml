        function comprimirImagen(dataUrl, nombreArchivo) {
            return new Promise((resolve, reject) => {
                try {
                    const img = new Image();

                    img.onload = function () {
                        console.log(`🖼️ Imagen cargada para compresión: ${this.naturalWidth}x${this.naturalHeight}`);

                        // 📐 CONFIGURACIÓN DE COMPRESIÓN
                        const config = obtenerConfigCompresion(this.naturalWidth, this.naturalHeight, dataUrl.length);

                        console.log(`🔧 Configuración de compresión:`, config);

                        // Crear canvas
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');

                        // Establecer dimensiones del canvas
                        canvas.width = config.ancho;
                        canvas.height = config.alto;

                        // 🎨 MEJORAR CALIDAD DE RENDERIZADO
                        ctx.imageSmoothingEnabled = true;
                        ctx.imageSmoothingQuality = 'high';

                        // Dibujar imagen redimensionada
                        ctx.drawImage(this, 0, 0, config.ancho, config.alto);

                        // Convertir a base64 con compresión
                        const imagenComprimida = canvas.toDataURL('image/jpeg', config.calidad);

                        // 📊 VALIDAR RESULTADO
                        if (imagenComprimida.length > dataUrl.length) {
                            console.warn('⚠️ La compresión aumentó el tamaño, usando original');
                            resolve({
                                dataUrl: dataUrl,
                                size: dataUrl.length,
                                compresion: false
                            });
                        } else {
                            resolve({
                                dataUrl: imagenComprimida,
                                size: imagenComprimida.length,
                                compresion: true,
                                dimensionesOriginales: { ancho: this.naturalWidth, alto: this.naturalHeight },
                                dimensionesFinales: { ancho: config.ancho, alto: config.alto }
                            });
                        }
                    };

                    img.onerror = function () {
                        console.error('❌ Error cargando imagen para compresión');
                        reject(new Error('Error cargando imagen para compresión'));
                    };

                    img.src = dataUrl;

                } catch (error) {
                    console.error('❌ Error en compresión:', error);
                    reject(error);
                }
            });
        }

        function obtenerConfigCompresion(anchoOriginal, altoOriginal, tamañoBytes) {
            // 📏 DIMENSIONES MÁXIMAS SEGÚN USO
            const DIMENSIONES_MAXIMAS = {
                thumbnail: { ancho: 400, alto: 300 },
                normal: { ancho: 800, alto: 600 },
                alta: { ancho: 1200, alto: 900 },
                original: { ancho: anchoOriginal, alto: altoOriginal }
            };

            // 📦 LÍMITES DE TAMAÑO (en caracteres base64)
            const LIMITE_PEQUENO = 500000;  // ~375KB
            const LIMITE_MEDIO = 1000000;   // ~750KB
            const LIMITE_GRANDE = 2000000;  // ~1.5MB

            let configuracion = {
                ancho: anchoOriginal,
                alto: altoOriginal,
                calidad: 0.9
            };

            // 🔍 DETERMINAR CONFIGURACIÓN SEGÚN TAMAÑO ACTUAL
            if (tamañoBytes > LIMITE_GRANDE) {
                // Imagen muy grande - compresión agresiva
                configuracion = {
                    ...redimensionar(anchoOriginal, altoOriginal, DIMENSIONES_MAXIMAS.normal),
                    calidad: 0.7
                };
                console.log('🔥 Compresión agresiva aplicada');

            } else if (tamañoBytes > LIMITE_MEDIO) {
                // Imagen grande - compresión moderada
                configuracion = {
                    ...redimensionar(anchoOriginal, altoOriginal, DIMENSIONES_MAXIMAS.alta),
                    calidad: 0.8
                };
                console.log('🔶 Compresión moderada aplicada');

            } else if (tamañoBytes > LIMITE_PEQUENO) {
                // Imagen mediana - compresión ligera
                configuracion = {
                    ...redimensionar(anchoOriginal, altoOriginal, DIMENSIONES_MAXIMAS.original),
                    calidad: 0.85
                };
                console.log('🔸 Compresión ligera aplicada');

            } else {
                // Imagen pequeña - sin compresión
                configuracion = {
                    ancho: anchoOriginal,
                    alto: altoOriginal,
                    calidad: 0.95
                };
                console.log('✅ Sin compresión necesaria');
            }

            return configuracion;
        }

        // 📐 FUNCIÓN PARA REDIMENSIONAR MANTENIENDO ASPECT RATIO
        function redimensionar(anchoOriginal, altoOriginal, dimensionesMaximas) {
            const ratioOriginal = anchoOriginal / altoOriginal;
            const ratioMaximo = dimensionesMaximas.ancho / dimensionesMaximas.alto;

            let nuevoAncho, nuevoAlto;

            if (ratioOriginal > ratioMaximo) {
                // La imagen es más ancha
                nuevoAncho = Math.min(anchoOriginal, dimensionesMaximas.ancho);
                nuevoAlto = nuevoAncho / ratioOriginal;
            } else {
                // La imagen es más alta
                nuevoAlto = Math.min(altoOriginal, dimensionesMaximas.alto);
                nuevoAncho = nuevoAlto * ratioOriginal;
            }

            return {
                ancho: Math.round(nuevoAncho),
                alto: Math.round(nuevoAlto)
            };
        }

