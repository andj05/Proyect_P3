    <!-- Header con información y botones -->
    <div class="header-card">
        <h2 class="page-title">Consulta de Tipos de Documentos</h2>

        <div class="stats-info">
            <div class="stats-number">@(Model?.Count() ?? 0)</div>
            <div class="stats-label">Tipos de Documentos Registrados</div>
        </div>

        <div class="actions-buttons">
            <input type="button"
                   value="Nuevo Tipo de Documento"
                   class="btn btn-modern btn-primary-modern"
                   onclick="document.location.href='@Url.Content("~/Tipdoc/Add")'" />
            <input type="button"
                   value="Volver Atrás"
                   class="btn btn-modern btn-secondary-modern"
                   onclick="window.history.back()" />
        </div>
    </div>

